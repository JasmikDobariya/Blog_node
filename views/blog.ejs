<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Homepage</title>
  </head>
  <body>
    <%- include('./partials/nav') %>
    <div class="container mt-4 text-center">
      <h1><%- blogs.title %></h1>
      <img src="<%- blogs.coverImageURL %>" width="500vw" height="400vh" />
      <p class="my-4 fs-5"><%= blogs.body %></p>
      <img src="<%= blogs.createdBy.profileImageURL %>" width="50" />
      <h4><%= blogs.createdBy.fullName %></h4>
    </div>
    <div class="container mb-4 text-center">
      <hr />
      <h2>Comment (<%= comments.length %>)</h2>
      <% if (locals.user) { %>
      <form
        action="/blog/comment/<%- blogs._id %>"
        method="post"
        class="d-flex align-items-center flex-column"
      >
        <input
          type="text"
          name="content"
          class="form-control w-50"
          placeholder="Enter Your Comments"
        />
        <button class="btn btn-primary mt-2 w-25" type="submit">Add</button>
        <% } %>
      </form>
    </div>
    <div class="mt-3">
      <% comments.forEach(comment => { %>
      <div class="container my-3">
        <div class="d-flex gap-2">
        <img src="<%= comment.createdBy.profileImageURL %>" width="50" />
        <div class="flex-column">
        <h4 ><%= comment.createdBy.fullName %></h4>
        <pre class="fs-6"><%= comment.content %></pre>
      </div>
      </div>
      </div>
      <% }) %>
    </div>

    <%- include('./partials/script.ejs') %>
  </body>
</html>
